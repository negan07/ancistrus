+install: control
+	$(SSTRIP) $(BINS)
+	for D in $(BINDIR) $(APPDIR); do install -m 0755 -d $$D; done
+	install -m 0755 $(BINS) $(BINDIR)
+	install -m 0755 $(STARTUP) $(APPDIR)
 
-CFLAGS	 += -I. -pipe -DSHELLPATH=\"$(LOGIN)\" -Wall
+.PHONY: clean
