diff -urN work/sqlite-src-3340100/Makefile work/sqlite-src-3340100/Makefile
--- work/sqlite-src-3340100/Makefile	2018-10-23 23:00:46.662292000 +0200
+++ work/sqlite-src-3340100/Makefile	2018-10-23 23:01:08.566300143 +0200
@@ -0,0 +1,54 @@
+include ../Rules.mak
+
+LIBSNAME		:= libsqlite3.so
+LIBSMAINVER		:= 0
+LIBSVER			:= $(LIBSMAINVER).8.6
+LIBSDIRNAME		:= $(SQLITE)/.libs
+LIBS			:= $(LIBSNAME).$(LIBSVER)
+
+all: config
+	$(MAKE) -C $(SQLITE)
+	$(STRIP) $(STRIPFLAGS) $(LIBSDIRNAME)/*.a
+
+config:
+	@if [ ! -f h_config ]; then \
+	$(MAKE) configure || exit 1; \
+	touch h_config; \
+	fi
+
+configure:
+	cd $(SQLITE) && ./configure --build=$(BUILD_HOST) --host=$(TARGET_NAME) CFLAGS="$(CFLAGS) -Os -s -DSQLITE_DEFAULT_MEMSTATUS=0 -DSQLITE_DEFAULT_WAL_SYNCHRONOUS=1 -DSQLITE_LIKE_DOESNT_MATCH_BLOBS -DSQLITE_MAX_EXPR_DEPTH=0 -DSQLITE_OMIT_DECLTYPE -DSQLITE_OMIT_DEPRECATED -DSQLITE_OMIT_PROGRESS_CALLBACK -DSQLITE_OMIT_SHARED_CACHE -DSQLITE_USE_ALLOCA" CPPFLAGS="-I$(WORK_DIR)/$(ZLIB)/$(ZLIB)" LDFLAGS="-L$(WORK_DIR)/$(ZLIB)/$(ZLIB)" LIBS="-lz" --disable-debug --disable-shared --enable-static --enable-threadsafe --disable-tcl --disable-load-extension --disable-editline --disable-readline --disable-all
+
+install: control
+	#$(STRIP) $(LIBSDIRNAME)/$(LIBS)
+	#for D in $(LIBDIR); do install -m 0755 -d $$D; done
+	#install -m 0755 $(LIBSDIRNAME)/$(LIBS) $(LIBDIR)
+
+clean:
+	$(MAKE) -C $(SQLITE) clean
+
+distclean:
+	@rm -f h_config
+	$(MAKE) -C $(SQLITE) distclean
+
+ifndef BUILD
+control:
+else
+POSTINST		:= $(CTRL_DIR)/postinst
+POSTRM			:= $(CTRL_DIR)/postrm
+
+control: postinst postrm
+
+postinst:
+	@echo "#!/bin/sh" > $(POSTINST)
+	@echo "for L in $(LIBSNAME) $(LIBSNAME).$(LIBSMAINVER); do ln -sf $(LIBS) $(LDLIB)/\$$L; done" >> $(POSTINST)
+	@echo "sync" >> $(POSTINST)
+	@echo "exit 0" >> $(POSTINST)
+
+postrm:
+	@echo "#!/bin/sh" > $(POSTRM)
+	@echo "rm -f $(LDLIB)/$(LIBSNAME)*" >> $(POSTRM)
+	@echo "sync" >> $(POSTRM)
+	@echo "exit 0" >> $(POSTRM)
+endif
+
