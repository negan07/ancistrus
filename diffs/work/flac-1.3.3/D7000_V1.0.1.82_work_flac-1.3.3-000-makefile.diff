diff -urN work/flac-1.3.3/Makefile work/flac-1.3.3/Makefile
--- work/flac-1.3.3/Makefile	2018-10-23 23:00:46.662292000 +0200
+++ work/flac-1.3.3/Makefile	2018-10-23 23:01:08.566300143 +0200
@@ -0,0 +1,49 @@
+include ../Rules.mak
+
+LIBSNAME		:= libFLAC.so
+LIBSMAINVER		:= 8
+LIBSVER			:= $(LIBSMAINVER).3.0
+LIBSDIRNAME		:= $(FLAC)/src/libFLAC/.libs
+LIBS			:= $(LIBSNAME).$(LIBSVER)
+
+all: config
+	$(MAKE) -C $(FLAC)
+	$(STRIP) $(STRIPFLAGS) $(LIBSDIRNAME)/*.a
+
+config:
+	@if [ ! -f h_config ]; then \
+	$(MAKE) configure || exit 1; \
+	touch h_config; \
+	fi
+
+configure:
+	cd $(FLAC) && ./configure --build=$(BUILD_HOST) --host=$(TARGET_NAME) CFLAGS="$(CFLAGS) -Os -s" CPPFLAGS="-I$(WORK_DIR)/$(ICONV)/$(ICONV)/include" LDFLAGS="-L$(WORK_DIR)/$(ICONV)/$(ICONV)/lib/.libs" LIBS="-liconv" --enable-static --disable-shared --disable-dependency-tracking --disable-cpplibs --disable-sse --disable-altivec --disable-local-xmms-plugin --disable-xmms-plugin --disable-ogg --disable-oggtest --disable-thorough-tests --disable-examples --disable-rpath --disable-debug
+
+install: control
+	#$(STRIP) $(LIBSDIRNAME)/$(LIBS)
+	#for D in $(LIBDIR); do install -m 0755 -d $$D; done
+	#install -m 0755 $(LIBSDIRNAME)/$(LIBS) $(LIBDIR)
+	#for L in $(LIBSNAME) $(LIBSNAME).$(LIBSMAINVER); do ln -sf $(LIBS) $(LIBDIR)/$$L; done
+
+clean:
+	$(MAKE) -C $(FLAC) clean
+
+distclean:
+	@rm -f h_config
+	$(MAKE) -C $(FLAC) distclean
+
+ifndef BUILD
+control:
+else
+PREINST		:= $(CTRL_DIR)/preinst
+
+control: preinst
+
+preinst:
+	@echo "#!/bin/sh" > $(PREINST)
+	@echo "echo \"Removing old lib ver & symlinks...\"" >> $(PREINST)
+	@echo "rm -f $(LDLIB)/$(LIBSNAME)*" >> $(PREINST)
+	@echo "sync" >> $(PREINST)
+	@echo "exit 0" >> $(PREINST)
+endif
+
