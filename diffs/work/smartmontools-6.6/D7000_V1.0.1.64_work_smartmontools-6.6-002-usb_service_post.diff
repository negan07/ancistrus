diff -urN work/smartmontools-6.6/usb_service_post work/smartmontools-6.6/usb_service_post
--- work/smartmontools-6.6/usb_service_post	2017-11-03 21:54:56.000000000 +0100
+++ work/smartmontools-6.6/usb_service_post	2018-04-19 22:48:31.600116512 +0200
@@ -0,0 +1,21 @@
+#!/bin/sh
+
+case $1 in
+stop)
+rc smontools stop
+;;
+"")
+;;
+*)
+HDIDLECMD="hd-idle"
+killall -9 $HDIDLECMD >/dev/null 2>&1
+eval `anc nvram get hdidle_timeout` >/dev/null 2>&1
+[ -z "${hdidle_timeout}" ] && hdidle_timeout=30
+TOUT=$(( ${hdidle_timeout} * 60 ))
+[ "${TOUT}" != "0" ] && for D in `cat /proc/partitions | awk '{print $4}' | grep sd | grep -v sd.[0-9]`; do HDIDLECMD="${HDIDLECMD} -a $D -i ${TOUT}"; done
+[ "${HDIDLECMD}" != "hd-idle" ] && ${HDIDLECMD}
+rc smontools start
+;;
+esac
+
+exit 0
